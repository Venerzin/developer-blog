<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DeveloperBlog | Homepage</title>

    <!--Importanto do BootStrap-->
    <link rel="stylesheet" href="/css/bootstrap.min.css">    
</head>
<body>
    <%- include  ('../../partials/homenavbar.ejs'); %>

    <div class="container">
        
        <% result.articles.rows.forEach((article) => {%>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title%></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug%>" class="btn btn-success">Ler Artigo</a>
                </div>
            </div>
        <% });%>


        <br>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){%>
                    <a href="/articles/page/<%= result.page - 1%>" style="float:left"> <<< Anterior</a>
                <%}else if (result.page == 2){%>
                    <a href="/" style="float:left"> <<< Anterior</a>
                <%}%>

                <% if(result.next){%>
                <a href="/articles/page/<%= result.page + 1%>" style="float:right">Proximo >>></a>
                <%}%>
            </div>
        </div>
        <br>

    </div>

</body>
    <%- include ('../../partials/dependencies.ejs'); %> 
</html>